<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="170dp"
        app:srcCompat="@drawable/bgnw"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ava"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="95dp"
        android:clipToOutline="true"
        android:elevation="6dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ava"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="63dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backnw" />

    <ImageView
        android:id="@+id/dots"
        android:layout_width="60dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/dotsnw"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:scaleType="fitCenter"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="60dp"
        android:layout_height="63dp"
        app:srcCompat="@drawable/searchnw"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dots"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:scaleType="fitCenter"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/block"
        android:layout_width="220dp"
        android:layout_height="410dp"
        app:srcCompat="@drawable/blocked"
        app:layout_constraintTop_toBottomOf="@id/block"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="-20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:text="Katarina pusing sekali"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="-10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/ava" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sickandsuffer"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/ava" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not followed by anyone you're following"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/ava" />

    <ImageView
        android:id="@+id/isblocked"
        android:layout_width="0dp"
        android:layout_height="700dp"
        android:layout_marginTop="344dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bawah" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:text="sickandsuffer is blocked"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="110dp"
        app:layout_constraintTop_toBottomOf="@id/ava" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="233dp"
        android:layout_height="55dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Are you sure you want to view these posts? Viewing posts won't unblock @sickandsuffer"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ava" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="220dp"
        android:layout_height="400dp"
        app:srcCompat="@drawable/view"
        app:layout_constraintTop_toBottomOf="@id/block"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="95dp" />

</androidx.constraintlayout.widget.ConstraintLayout>